<div class="row countdown countdown-{{ include.size }}">
    <div class="col-md-2">&nbsp;</div>
    {% if include.size == "large" %}
      <div class="col-md-2"><span class="cdDays">XX</span> <small>days</small></div>
      <div class="col-md-2"><span class="cdHrs">XX</span> <small>hours</small></div>
      <div class="col-md-2"><span class="cdMins">XX</span> <small>minutes</small></div>
      <div class="col-md-2"><span class="cdSecs">XX</span> <small>seconds</small></div>
    {% else %}
      <div class="col-md-2"><span class="cdDays">XX</span><br/><small>days</small></div>
      <div class="col-md-2"><span class="cdHrs">XX</span><br/><small>hours</small></div>
      <div class="col-md-2"><span class="cdMins">XX</span><br/><small>minutes</small></div>
      <div class="col-md-2"><span class="cdSecs">XX</span><br/><small>seconds</small></div>
    {% endif %}
    <div class="col-md-2">&nbsp;</div>
</div>


<script type="text/javascript">
{% if include.demo == "true" %}
    var end = new Date();
    end.setDate(end.getDate() + 3);
{% else %}
	var end = end || new Date('{{ include.date }}');
{% endif %}

	var _second = 1000;
	var _minute = _second * 60;
	var _hour = _minute * 60;
	var _day = _hour * 24;

	var showRemaining = showRemaining || function() {
		var now = new Date();
		var distance = end - now;
		if (distance < 0) {
			distance = 0;
			clearInterval(timer);
		}
		
		$(".cdDays").text(Math.floor(distance / _day));
		$(".cdHrs").text(Math.floor((distance % _day) / _hour));
		$(".cdMins").text(Math.floor((distance % _hour) / _minute));
		$(".cdSecs").text(Math.floor((distance % _minute) / _second));
	}
	
	var timer = timer || setInterval(showRemaining, 1000);
	showRemaining();
</script>
