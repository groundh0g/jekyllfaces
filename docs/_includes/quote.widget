{% assign config = include.config %}
{% unless config %}
  {% include read-config.liquid %}
{% endunless %}

<div class="quote-div">
  <div>
    <blockquote>
      {{ include.text }}
      <footer>
        <cite>
          <a href="{{ include.link }}" target="_blank">{{ include.author }}</a>
        </cite>
      </footer>
    </blockquote>
  </div>
</div>
