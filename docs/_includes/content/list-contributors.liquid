{% assign pages = site.pages | where: "dir", page.dir %}

{% for file in pages %}
  {% if file.name == page.name %}{% continue %}{% endif %}

{% capture bioLeft %}
  <img alt="{{ file.fullname }} Avatar" src='{{ "/assets/" | append: file.image | relative_url }}' width="300" title="{{ file.fullname }} Avatar">

  **{{ file.fullname }}**<br/>
  {% if file.role %}{{ file.role }}<br/>{% endif %}
  {% if file.alias %}[@{{ file.alias }}](https://github.com/{{ file.alias }}/){:target="_blank"}<br/>{% endif %}
{% endcapture %}

{% capture social_output %}
{%assign social_count = 0 %}
{%if file.social.twitter %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://twitter.com/{{ file.social.twitter }}" title="{{ file.social.twitter }}"><i class="fa fa-twitter"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.twitter }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.facebook %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://facebook.com/{{ file.social.facebook }}" title="{{ file.social.facebook }}"><i class="fa fa-facebook"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.facebook }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.instagram %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://www.instagram.com/{{ file.social.instagram }}" title="{{ file.social.instagram }}"><i class="fa fa-instagram"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.instagram }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.linkedin %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://www.linkedin.com/in/{{ file.social.linkedin }}" title="{{ file.social.linkedin }}"><i class="fa fa-linkedin-square"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.linkedin }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.googleplus %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://google.com/+{{ file.social.googleplus }}" title="{{ file.social.googleplus }}"><i class="fa fa-google-plus-official"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.googleplus }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.github %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://github.com/{{ file.social.github }}" title="{{ file.social.github }}"><i class="fa fa-github"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.github }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{%if file.social.bitbucket %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://bitbucket.org/{{ file.social.bitbucket }}/" title="{{ file.social.bitbucket }}"><i class="fa fa-bitbucket-square"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.bitbucket }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
