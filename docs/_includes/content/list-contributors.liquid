{%if file.social.steam %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://steamcommunity.com/id/{{ file.social.steam }}" title="{{ file.social.steam }}"><i class="fa fa-steam-square"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.steam }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
{% endcapture %}{% assign social_output = social_output | strip_newlines | strip_whitespace %}

{% capture bioRight %}
  {{ file.content }}

  {{ social_output }}
{% endcapture %}

<hr/>
<br/>
<div class="row">
  <div class="col-md-4">
    {{ bioLeft | markdownify }}
  </div>
  <div class="col-md-8">
    {{ bioRight | markdownify }}
  </div>
</div>

{% endfor %}