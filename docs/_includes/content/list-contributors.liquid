{%if file.social.deviant %}{% if social_count > 0 %} \| {% endif %}<a target="_blank" href="https://{{ file.social.deviant }}.deviantart.com/" title="{{ file.social.deviant }}"><i class="fa fa-deviantart"></i>{% if file.social.showAlias %}&nbsp;{{ file.social.deviant }}{% endif %}</a>{% endif %}{% assign social_count = social_count | plus: 1 %}
